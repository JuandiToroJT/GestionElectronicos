@{
    ViewData["Title"] = "Inicio";
}

<nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand" href="#">Tienda de Electrónicos</a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <span class="nav-link">Rol: @(BaseDatosSimulada.UsuarioSesion.Admin ? "Administrador" : "Empleado")</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Seguridad/Logout">Cerrar Sesión</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="principal">
        <h1 class="display-4">Bienvenido a la Tienda de Electrónicos</h1>
        <p class="lead">Gestione su inventario y ventas de manera eficiente.</p>
        <hr class="my-4">
        <p>Use las opciones a continuación para navegar por las funcionalidades del sistema.</p>
    </div>
    <div class="row">
        @if (!BaseDatosSimulada.UsuarioSesion.Admin)
        {
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Gestión de Inventario</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Mantenga un registro actualizado de los productos en stock.</p>
                        <a href="@Url.Action("Inventario", "Home")" class="btn btn-primary mt-2">Ir a Inventario</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Punto de Venta</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Procesar ventas y actualizar el inventario automáticamente.</p>
                        <a href="@Url.Action("Venta", "Home")" class="btn btn-primary mt-2">Ir a Punto de Venta</a>
                    </div>
                </div>
            </div>
        }
        @if (BaseDatosSimulada.UsuarioSesion.Admin)
        {
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Historial de Ventas</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Ver y gestionar el historial de ventas realizadas.</p>
                        <a href="@Url.Action("Historial", "Home")" class="btn btn-primary mt-2">Ir a Ventas</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>